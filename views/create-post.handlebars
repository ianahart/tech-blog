<section class='create-blog-post-container'>
  <div class='form-row'>
    <form id='create-blog-post-form'>
      <div class='form-contents'>
        <h2>Create post</h2>
        <p class='hidden form-error'></p>
        <div class='form-group'>
          <label for='create-post-title'>Title</label>
          <input name='create-post-title' type='text' id='create-post-title' />
        </div>
        <div class='form-group'>
          <label for='create-post-body'>Body</label>
          <textarea id='create-post-body' name='create-post-body'></textarea>
        </div>
        <div class='btn-container'>
          <button type='submit'>Create</button>
        </div>
      </div>
    </form>
  </div>
</section>
<script src='/js/createPost.js'></script>