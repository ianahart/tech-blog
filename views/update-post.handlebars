<section class='update-blog-post-container'>
  <div class='form-row'>
    <form id='update-blog-post-form' data-id='{{post.id}}' data-user='{{post.user.id}}'>
      <div class='form-contents'>
        <h2>Update post</h2>
        <p class='hidden form-error'></p>
        <div class='form-group'>
          <label for='update-blog-title'>Title</label>
          <input value='{{post.title}}' name='update-blog-title' type='text' id='update-blog-title' />
        </div>
        <div class='form-group'>
          <label for='update-blog-body'>Body</label>
          <textarea id='update-blog-body' name='update-blog-body'>{{post.post_text}}</textarea>
        </div>
        <div class='btn-container'>
          <button type='submit'>Edit</button>
        </div>
      </div>
    </form>
  </div>
</section>

<script src='/js/updatePost.js'></script>