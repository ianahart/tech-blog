<div class='signup-container'>
  <div class='form-row'>
    <form id='signup-form'>
      <div class='form-contents'>
        <h2>Sign Up</h2>
        <p class='hidden signup-error'></p>
        <div class='form-group'>
          <label for='signup-username'>Username</label>
          <input name='signup-username' type='text' id='signup-username' />
        </div>
        <div class='form-group'>
          <label for='signup-password'>Password</label>
          <input name='signup-password' type='password' id='signup-password' />
        </div>
        <div class='form-group'>
          <label for='signup-confirm-password'>Confirm Password</label>
          <input name='signup-confirm-password' type='password' id='signup-confirm-password' />
        </div>
        <div class='btn-container'>
          <button type='submit'>Sign up</button>
          <div class='auth-link'>
            <p>Already have an account?</p>
            <a href='/login'>Login</a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<script src='/js/signUp.js'></script>